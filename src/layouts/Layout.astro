---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --toggle-tabel-background: #eee;
    --sun-icon-color: #ffffff;
    --moon-icon-color: #a3acc8;
    --toggle-border-color: #c3cadb;
    --accent: #5f11a6;
    --body-background: #fff;
    --color-text: #111;
    --h2-color: #333;
    --h3-color: #444;
    --h4-color: #555;
    --p-color: #666;
    --kbd-background: #777;
    --kbd-color: #eee;
		--background-toggle-ball: #444;
  }

  body.dark {
    --sun-icon-color: #505d84;
    --moon-icon-color: #090b11;
    --toggle-border-color: #3d4663;
    --body-background: #222;
    --color-text: #fff;
    --h2-color: #eee;
    --h3-color: #ddd;
    --h4-color: #ccc;
    --p-color: #bbb;
    --kbd-background: #777;
    --kbd-color: #eee;
		--background-toggle-ball: #eee;
		--toggle-tabel-background: #444;
  }

  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background-color: #fff;
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  body {
    background-color: var(--body-background);
    color: var(--color-text);
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    color: var(--h2-color);
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  h3 {
    font-weight: 500;
    color: var(--h3-color);
    margin-bottom: 4px;
  }

  h4 {
    color: var(--h4-color);
    font-weight: 400;
  }

  p {
    color: var(--p-color);
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  section {
    max-width: 700px;
    margin: 0 auto 48px;
  }

  section h1 {
    margin-bottom: 1rem;
  }

  section h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  time {
    font-size: 0.85rem;
    color: var(--h4-color);
  }

  h3 a {
    color: var(--h2-color);
  }

  .info > span {
    color: var(--h3-color) !important;
  }

  .icon {
    color: var(--h3-color) !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }
  }
</style>
