---
import {projects} from "@cv"
---

<section>
	<h1>Projects</h1>

	<ul>
		{
			projects.map(({name, isActive,description, url, highlights})=>{
				return(
					<article>
					<header>
						<a 
							href={url}
							title={`Ver el proyecto ${name}`}
						>
							<h3>{name}</h3>
						</a>
						<p>{description}</p>
					</header>
					<footer>
						<ul>
							{
								highlights.map((highlight) =>{
									return(
										<li>{highlight}</li>
									)
								})
							}
						</ul>
					</footer>
				</article>
				)
			})
		}
	</ul>

</section>

<style>
	ul{
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
	}

	article{
		border-radius: 8px;
		border: 1px solid #f2f2f2;
		gap: 16px;
		display: flex;
		flex-direction: column;
		padding: 1rem;
		height: 100%;

	}

	header{

	}

	footer{
		background-color: #eee;
		color: #333;
		padding: 0.2rem 0.6rem;
		border-radius: 5px;
		font-weight: 500;
		
	}
</style>