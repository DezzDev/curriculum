---
import { projects } from "@cv";
---

<section>
  <h1>Proyectos</h1>

  <div class="project-content">
    {
      projects.map(({ name, isActive, description, url, highlights }) => {
        return (
          <article>
            <header>
              <h3>
                <a href={url} title={`Ver el proyecto ${name}`}>
                  {name}
                </a>
                {isActive && <span>&bull;</span>}
              </h3>
              <p>{description}</p>
            </header>
            <footer>
              {highlights.map((highlight) => {
                return <span>{highlight}</span>;
              })}
            </footer>
          </article>
        );
      })
    }
  </div>
</section>

<style>
  .project-content {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
		gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    height: 100%;
  }

  header {
    flex: 1;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
  }

  footer span {
    border-radius: 6px;
    background-color: #eee;
    color: #333;
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  h3 span {
    color: green;
  }


  a:hover {
    text-decoration: underline;
  }

  p {
    font-size: 0.8rem;
    line-height: 1.2rem;
    margin-bottom: 0.5rem;
  }
</style>
