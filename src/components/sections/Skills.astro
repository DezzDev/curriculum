---
import {skills} from "@cv"


---

<section>
	<h1>Skills</h1>

	<ul>
		{
			skills.map(({name}) =>{
				return(
					<li>
						<span>{name}</span>
					</li>
				)
			})
		}
	</ul>
</section>

<style>
	ul{
		display: flex;
		flex-flow: row wrap;
		gap: 1rem;
	}

	li {
		background-color: #eee;
		color: #000;
		padding: 0.2rem 0.6rem;
		border-radius: 5px;
		font-weight: 500;
	}
</style>