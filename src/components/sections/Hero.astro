---
import { basics } from "@cv";
import EmailIcon from "@/icons/Email.astro";
import PhoneIcon from "@/icons/Phone.astro";
import Github from "@/icons/Github.astro";
import Linkedin from "@/icons/Linkedin.astro";

const { name, label, image, location, profiles, phone, email } = basics;
const { city, region } = location;

const SOCIAL_ICONS: Record<string, any> = {
  Github,
  Linkedin,
};

const linkedinInfo = profiles.find(({ network }) => network === "Linkedin");
const linkedinUrl = linkedinInfo?.url;

const printInfo = [email, phone, linkedinUrl].filter(Boolean).join(" • ");
---

<section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        {city}, {region}
      </span>
      <footer>
        <div class="footer-content print">
          {printInfo}
        </div>
        <div class="footer-content no-print">
          {
            email && (
              <a
                href={`mailto:${email}`}
                title={`Enviar un email a ${name} al correo ${email}`}
                target="_blank"
                rel="noopener noreferrer"
                class="icon"
              >
                <EmailIcon />
              </a>
            )
          }
          {
            phone && (
              <a
                href={`tel:${phone}`}
                title={`LLamar por teléfono a ${name} al número ${phone}`}
                target="_blank"
                rel="noopener noreferrer"
                class="icon"
              >
                <PhoneIcon />
              </a>
            )
          }
          {
            profiles.map((profile) => {
              const Icon = SOCIAL_ICONS[profile.network];

              return (
                <a
                  href={profile.url}
                  title={`Visitar el perfil de ${name} en ${profile.network}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="icon"
                >
                  <Icon />
                </a>
              );
            })
          }
        </div>
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</section>

<style>
  h1 {
    font-size: 2rem;
  }

  h2 {
    color: #444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  img {
    aspect-ratio: 1/1;
    object-fit: cover;
    width: 128px;
    border-radius: 10px;
  }

  span {
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  .footer-content {
		font-size: 0.65rem;
    margin-top: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .icon {
    width: 32px;
    height: 32px;
    display: flex;
    color: #777;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    border-radius: 6px;
    transition: background-color 0.3s ease;
  }

  .icon:hover {
    background-color: #eee;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 2rem;
  }

  .print {
    display: none;
  }

  @media print {
    .print {
      display: initial;
			color: #666;
    }

    .no-print {
      display: none;
    }
  }
</style>
